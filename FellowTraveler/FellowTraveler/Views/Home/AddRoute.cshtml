    <div class="container" align="center">
        <form method="post">
            <input type="hidden" name="ownerId" value="@Model.Owner.Id" />
            <a href="#" id="role" >ВОДИТЕЛЬ</a>
            <a href="#" id="role">ПАССАЖИР</a>
            <div class="container" id="data">
                <div><input type="text" class="routename" placeholder="Название маршрута" name="Name" value="@Model.Name"></div>
                <div>
                    <input class="from" type="text" placeholder="Откуда" name="From" value="@Model.From">
                    <button id="transfer" type="button" class="glyphicon glyphicon-transfer"></button>
                    <input class="where" type="text" placeholder="Куда" name="To" value="@Model.To">
                </div>
                <div>
                    <input type="time" class="time" name="Time" placeholder="Выезд">
                    <input class="datepicker-here date" type="text" placeholder="Дата" name="Date" value="@Model.Date">
                    <input min="0" step="25" type="number" class="price" placeholder="Цена"  name="Price"value="@Model.Price">
                </div>
                <div><button type="submit" class="save">Сохранить</button></div>
                <div id="map" style=" max-width: 760px; height: 600px"></div>
                <!-- создание контейнера, в котором размещена карта -->
                <div id="viewContainer" style="width: 300px; height:auto"></div>
            </div>
         
        </form>
        



