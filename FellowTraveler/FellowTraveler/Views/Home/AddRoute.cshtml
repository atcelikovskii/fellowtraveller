@model DataService.Route


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add New Route</title>
</head>
<body>
    <br />
    <div class="container" align="center">
        <form method="post">

            <input type="hidden" name="ownerId" value="@Model.Owner.Id" />
            
            <div class="container-fluid" id="data">              
                <div><input type="text" class="routename" placeholder="Название маршрута"  name="Name" value="@Model.Name"></div>
                <div>
                    <input class="from" type="text" placeholder="Откуда"  name="From" value="@Model.From">
                    <button id="transfer" type="button" class="glyphicon glyphicon-transfer"></button>
                    <input type="text" class="where" placeholder="Куда" name="To" value="@Model.To">
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-4"> <input type="time" class="time" placeholder="Выезд" name="Time" value="@Model.Date"></div>
                    <div class="col-lg-4"><input id="datepicker" type="text" class="date" data-provide="datepicker" placeholder="Дата"></div>
                    <div class="col-lg-4 col-sm-12"> <input type="number" class="price" placeholder="Цена" name="Price" value="@Model.Price"></div>
                </div>
            </div>
            <div><button type="submit" class="save">Сохранить</button></div>
        </form>

