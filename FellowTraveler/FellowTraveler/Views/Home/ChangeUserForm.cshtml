@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeUserForm</title>
</head>
<body>
    <div>
        <form method="post">
            <input type="hidden" value="@ViewBag.user.Id" name="Id" />
            <table>
                <tr>
                    <td><p>Введите имя </p></td>
                    <td><input type="text" name="Name" value="@ViewBag.user.Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введите фамилию </p></td>
                    <td><input type="text" name="Surname" value="@ViewBag.user.Surname" /> </td>
                </tr>
                <tr>
                    <td><p>Введите дату рождения </p></td>
                    <td><input type="date" name="DateOfBirthday" value="@ViewBag.user.DateOfBirthday" /> </td>
                </tr>
                
                <tr>
                    <td><p>Введите новый e-mail </p></td>
                    <td><input type="text" name="Email" value="@ViewBag.user.Email" /> </td>
                </tr>
                <tr>
                    <td>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios1" value="true">Мужчина
                            </label>
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="false">Женщина
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><p>Введите новый пароль </p></td>
                    <td><input type="text" name="Password" value="@ViewBag.user.Password" /> </td>
                </tr>
                <tr>
                    <td><p>Повторите пароль </p></td>
                    <td><input type="text" name="Password" value="@ViewBag.user.Password" /> </td>
                </tr>
                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
